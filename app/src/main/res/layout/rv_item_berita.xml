<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/news_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    app:cardCornerRadius="16dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="16dp"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/rv_item_berita_img"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:contentDescription="@string/description_news_img"
            android:scaleType="centerCrop"
            tools:src="@drawable/fatisda_uns_jalin_kerja_sama_dengan_national_chung_hsing_university_2"
            android:background="@color/primary_blue"/>

        <TextView
            android:id="@+id/rv_item_berita_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dummy_text"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"/>

        <TextView
            android:id="@+id/rv_item_berita_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dummy_text"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>