<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/judul_staff_pengajar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/primary_blue"
            android:text="Staff Pengajar"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"/>

        <ImageView
            android:id="@+id/img_dosen_detail"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/judul_nama_dosen_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/primary_blue"
            android:text="Nama : " />

        <TextView
            android:id="@+id/txt_nama_dosen_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/judul_email_dosen_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/primary_blue"
            android:text="Email : " />

        <TextView
            android:id="@+id/txt_email_dosen_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/judul_prodi_dosen_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/primary_blue"
            android:text="Program Studi yang diampu: " />

        <TextView
            android:id="@+id/txt_prodi_dosen_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>


    </LinearLayout>
</ScrollView>
